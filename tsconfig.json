{
    "compilerOptions": {
      "baseUrl": ".",
      // "outDir": "./build/", not needed because we use webpack with ts-loader
      "module": "esnext",
      "target": "es5",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true, // todo
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "skipLibCheck": true,
    },
    "include": [
        "./src/*"
    ],
    "allowSyntheticDefaultImports": true,
    "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts"
    ]
  }